@using NursesScheduler.BlazorShared.Helpers
@using NursesScheduler.BlazorShared.ViewModels


<div class="level container is-fluid">
    <div class="level-left">
        <div class="level-item has-text-centered">
            <p class="title">@Title</p>
        </div>
    </div>
    <div class="level-right">
        <div class="level-item">
            <a class="button is-info" href="/departaments">Powrót</a>
        </div>
    </div>
</div>

<div class='container'>
    <div class='columns is-mobile is-centered'>
      <div class='column is-5'>
        <div class="card">
          <div class="card-content">
            <EditForm EditContext="@editContext" OnValidSubmit="@SaveOnClick">
                <DataAnnotationsValidator />
                <div class="field">
                  <label class="label">Nazwa</label>
                  <div class="control">
                    <InputText class="input" @bind-Value="Departament.Name"/>
                    <div class="help is-danger">
                        <ValidationMessage For="@(() => Departament.Name)" />
                    </div>
                  </div>
                </div>
                <div class="buttons is-right">
                  <button class="@SubmitButtonCssHelper.GetSubmitButtonCssClass(isLoding)" @onclick="OnSubmitClick" type="submit">Zapisz</button>
                </div>
            </EditForm>
          </div>
        </div>
      </div>
    </div>
  </div>


@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public DepartamentViewModel Departament { get; set; }
    [Parameter]
    public EventCallback SaveOnClick { get; set; }

    private bool isLoding;
    private EditContext editContext;

    private void OnSubmitClick()
    {
        isLoding = true;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        isLoding = false;
        editContext = new(Departament);
        editContext.SetFieldCssClassProvider(new CustomFieldClassHelper());
    }
}
 