
<div class="control">
    <div class="select">
        <select value="@MonthPickerViewModel.MonthNumber" onchange="@SelectedMonthChanged">
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i">@((Months)i)</option>
            }
        </select>
    </div>
</div>

@code {
    [Parameter]
    public IMonthPickerViewModel MonthPickerViewModel { get; set; }
    [Parameter]
    public EventCallback OnChange { get; set; }

    private async Task SelectedMonthChanged(ChangeEventArgs e)
    {
        MonthPickerViewModel.MonthNumber = Int32.Parse(e.Value.ToString());
        await OnChange.InvokeAsync();
    }
}
