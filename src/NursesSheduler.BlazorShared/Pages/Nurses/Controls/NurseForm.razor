

<div class='columns is-mobile is-centered'>
    <div class='column is-5'>
        <div class="card">
            <div class="card-content">
                <EditForm EditContext="@_editContext" OnSubmit="@OnSubmit">
                    <DataAnnotationsValidator />
                    <div class="field">
                        <label class="label">Imie</label>
                        <div class="control">
                            <InputText class="input" @bind-Value="Nurse.Name" />
                            <div class="help is-danger">
                                <ValidationMessage For="@(() => Nurse.Name)" />
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Nazwisko</label>
                        <div class="control">
                            <InputText class="input" @bind-Value="Nurse.Surname" />
                            <div class="help is-danger">
                                <ValidationMessage For="@(() => Nurse.Surname)" />
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <InputRadioGroup @bind-Value="Nurse.Team">
                            <label class="radio">
                                <InputRadio Value="NurseTeams.T1"/>
                                Zespół 1
                            </label>
                            <label class="radio">
                                <InputRadio Value="NurseTeams.T2"/>
                                Zespół 2
                            </label>
                            </InputRadioGroup>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Wymiar urlopu</label>
                        <div class="control">
                            <div class="select is-fullwidth">
                                <InputSelect @bind-Value="Nurse.PTOentitlement">
                                    <option value="26">26 dni</option>
                                    <option value="20">20 dni</option>
                                </InputSelect>
                            </div>
                            <div class="help is-danger">
                                <ValidationMessage For="@(() => Nurse.PTOentitlement)" />
                            </div>
                        </div>
                    </div>
                    <div class="buttons is-right">
                        <button class="button is-primary @CssHelper.SetIsLoading(_isLoading)" type="submit">Zapisz</button>
                    </div>
                    
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public NurseViewModel Nurse { get; set; }
    [Parameter]
    public EventCallback SaveNurse { get; set; }

    private bool _isLoading;
    private EditContext _editContext;

    private async Task OnSubmit()
    {
        if (_editContext.Validate())
        {
            _isLoading = true;
            await Task.Delay(1);
            await SaveNurse.InvokeAsync();
        }
    }

    protected override void OnInitialized()
    {
        _isLoading = false;
        _editContext = new(Nurse);
        _editContext.SetFieldCssClassProvider(new CustomFieldClassHelper());
    }
}
